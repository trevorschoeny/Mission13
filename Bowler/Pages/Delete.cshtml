        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bowlers.Team.TeamName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Bowlers.BowlerID" />
        <input type="submit" value="Delete" class="btn btn-danger" /><br />
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
