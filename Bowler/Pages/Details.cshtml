@page
@model Bowler.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Bowler Details</h1>

<div>
    <h4>Bowler</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bowlers.BowlerLastName)
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bowlers.BowlerFirstName)
        </dd>
        <dt class="col-sm-2">
            Middle Initial
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bowlers.BowlerMiddleInit)
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bowlers.BowlerAddress)
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bowlers.BowlerCity)
        </dd>
        <dt class="col-sm-2">
            State Abbrev.
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bowlers.BowlerState)
        </dd>
        <dt class="col-sm-2">
            Zip
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bowlers.BowlerZip)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bowlers.BowlerPhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Team Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bowlers.Team.TeamName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Bowlers.BowlerID">Edit</a>
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>
